{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "FundOpsHQ Brand Tokens",
  "version": "2.0.0",
  "description": "Design tokens for FundOpsHQ brand implementation - Monochrome institutional palette",

  "colors": {
    "navy": {
      "dark": {
        "value": "#152d4a",
        "name": "Navy Dark",
        "usage": "Hover states, emphasis, deep backgrounds"
      },
      "primary": {
        "value": "#1E3A5F",
        "name": "Navy Primary",
        "usage": "Primary brand color, headers, buttons, navigation"
      },
      "light": {
        "value": "#2d4a6f",
        "name": "Navy Light",
        "usage": "Secondary navy elements, lighter accents on dark backgrounds"
      }
    },
    "gray": {
      "slate": {
        "value": "#64748B",
        "name": "Slate",
        "usage": "Body text, paragraphs, secondary content"
      },
      "medium": {
        "value": "#94A3B8",
        "name": "Medium Gray",
        "usage": "Captions, metadata, timestamps, helper text"
      },
      "light": {
        "value": "#CBD5E1",
        "name": "Light Slate",
        "usage": "Borders, dividers, subtle UI elements"
      },
      "lighter": {
        "value": "#E2E8F0",
        "name": "Lighter Gray",
        "usage": "Card borders, input borders, light dividers"
      },
      "cool": {
        "value": "#F1F5F9",
        "name": "Cool Gray",
        "usage": "Card backgrounds, alternating rows, sections"
      }
    },
    "warm": {
      "cream": {
        "value": "#FAF9F7",
        "name": "Cream",
        "usage": "Warm page backgrounds, softer alternative to white"
      },
      "beige": {
        "value": "#E8E4DE",
        "name": "Warm Beige",
        "usage": "Warm card backgrounds, subtle warm accents"
      },
      "stone": {
        "value": "#D4CDC4",
        "name": "Stone",
        "usage": "Warm borders, warm UI accents"
      },
      "taupe": {
        "value": "#A39E93",
        "name": "Taupe",
        "usage": "Warm muted text, sophisticated neutral"
      }
    },
    "base": {
      "white": {
        "value": "#FFFFFF",
        "name": "White",
        "usage": "Primary backgrounds, text on dark"
      },
      "black": {
        "value": "#0f172a",
        "name": "Near Black",
        "usage": "Maximum contrast text when needed"
      }
    },
    "text": {
      "primary": {
        "value": "#1E3A5F",
        "name": "Navy Primary",
        "usage": "Headings, important text on light backgrounds"
      },
      "secondary": {
        "value": "#64748B",
        "name": "Slate",
        "usage": "Body text, paragraphs"
      },
      "muted": {
        "value": "#94A3B8",
        "name": "Medium Gray",
        "usage": "Captions, metadata, timestamps"
      },
      "inverse": {
        "value": "#FFFFFF",
        "name": "White",
        "usage": "Text on dark backgrounds"
      }
    },
    "background": {
      "primary": {
        "value": "#FFFFFF",
        "name": "White",
        "usage": "Main page background"
      },
      "secondary": {
        "value": "#F1F5F9",
        "name": "Cool Gray",
        "usage": "Cards, sections, alternating rows"
      },
      "warm": {
        "value": "#FAF9F7",
        "name": "Cream",
        "usage": "Warm sections, softer backgrounds"
      },
      "dark": {
        "value": "#1E3A5F",
        "name": "Navy Primary",
        "usage": "Dark sections, footer, hero backgrounds"
      }
    },
    "border": {
      "light": {
        "value": "#E2E8F0",
        "usage": "Card borders, dividers, input borders"
      },
      "medium": {
        "value": "#CBD5E1",
        "usage": "Focused input borders, hover states"
      },
      "warm": {
        "value": "#D4CDC4",
        "usage": "Warm theme borders"
      }
    },
    "state": {
      "hover": {
        "primary": "#152d4a",
        "secondary": "#F1F5F9"
      },
      "focus": {
        "ring": "#1E3A5F",
        "ringOffset": "#FFFFFF"
      }
    }
  },

  "typography": {
    "fontFamilies": {
      "heading": {
        "name": "DM Sans",
        "fallback": "system-ui, -apple-system, sans-serif",
        "googleFontsUrl": "https://fonts.googleapis.com/css2?family=DM+Sans:wght@500;600;700&display=swap"
      },
      "body": {
        "name": "Inter",
        "fallback": "system-ui, -apple-system, sans-serif",
        "googleFontsUrl": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
      },
      "mono": {
        "name": "JetBrains Mono",
        "fallback": "ui-monospace, SFMono-Regular, monospace"
      }
    },
    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "scale": {
      "h1": {
        "fontSize": "48px",
        "fontSizeRem": "3rem",
        "lineHeight": 1.1,
        "fontWeight": 700,
        "fontFamily": "heading",
        "letterSpacing": "-0.02em"
      },
      "h2": {
        "fontSize": "36px",
        "fontSizeRem": "2.25rem",
        "lineHeight": 1.2,
        "fontWeight": 600,
        "fontFamily": "heading",
        "letterSpacing": "-0.01em"
      },
      "h3": {
        "fontSize": "24px",
        "fontSizeRem": "1.5rem",
        "lineHeight": 1.3,
        "fontWeight": 600,
        "fontFamily": "heading"
      },
      "h4": {
        "fontSize": "20px",
        "fontSizeRem": "1.25rem",
        "lineHeight": 1.4,
        "fontWeight": 500,
        "fontFamily": "heading"
      },
      "body": {
        "fontSize": "16px",
        "fontSizeRem": "1rem",
        "lineHeight": 1.6,
        "fontWeight": 400,
        "fontFamily": "body"
      },
      "bodyLarge": {
        "fontSize": "18px",
        "fontSizeRem": "1.125rem",
        "lineHeight": 1.6,
        "fontWeight": 400,
        "fontFamily": "body"
      },
      "small": {
        "fontSize": "14px",
        "fontSizeRem": "0.875rem",
        "lineHeight": 1.5,
        "fontWeight": 400,
        "fontFamily": "body"
      },
      "caption": {
        "fontSize": "12px",
        "fontSizeRem": "0.75rem",
        "lineHeight": 1.4,
        "fontWeight": 400,
        "fontFamily": "body"
      }
    }
  },

  "spacing": {
    "0": "0",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px",
    "12": "48px",
    "16": "64px",
    "20": "80px",
    "24": "96px"
  },

  "borderRadius": {
    "none": "0",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "card": "0 2px 8px rgba(30, 58, 95, 0.08)",
    "cardHover": "0 8px 24px rgba(30, 58, 95, 0.12)"
  },

  "transitions": {
    "fast": "150ms ease",
    "normal": "200ms ease",
    "slow": "300ms ease"
  },

  "components": {
    "button": {
      "primary": {
        "background": "#1E3A5F",
        "color": "#FFFFFF",
        "hoverBackground": "#152d4a",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontWeight": 600,
        "fontFamily": "heading"
      },
      "secondary": {
        "background": "transparent",
        "color": "#1E3A5F",
        "border": "1px solid #1E3A5F",
        "hoverBackground": "#F1F5F9",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontWeight": 600
      },
      "ghost": {
        "background": "transparent",
        "color": "#64748B",
        "hoverBackground": "#F1F5F9",
        "padding": "12px 24px",
        "borderRadius": "8px",
        "fontWeight": 500
      }
    },
    "card": {
      "background": "#FFFFFF",
      "border": "1px solid #E2E8F0",
      "borderRadius": "12px",
      "padding": "24px",
      "shadow": "0 2px 8px rgba(30, 58, 95, 0.08)"
    },
    "input": {
      "background": "#FFFFFF",
      "border": "1px solid #E2E8F0",
      "borderRadius": "8px",
      "padding": "12px 16px",
      "focusBorder": "#1E3A5F",
      "focusRing": "0 0 0 3px rgba(30, 58, 95, 0.1)"
    },
    "badge": {
      "background": "#F1F5F9",
      "color": "#64748B",
      "padding": "4px 12px",
      "borderRadius": "9999px",
      "fontSize": "12px",
      "fontWeight": 500
    },
    "link": {
      "color": "#1E3A5F",
      "hoverColor": "#152d4a",
      "underline": "none",
      "hoverUnderline": "underline"
    }
  },

  "logos": {
    "full": {
      "light": "logos/fundopshq-primary-light.svg",
      "dark": "logos/fundopshq-primary-dark.svg",
      "monoLight": "logos/fundopshq-mono-light.svg",
      "monoDark": "logos/fundopshq-mono-dark.svg"
    },
    "short": {
      "light": "logos/fohq-primary-light.svg",
      "dark": "logos/fohq-primary-dark.svg",
      "monoLight": "logos/fohq-mono-light.svg",
      "monoDark": "logos/fohq-mono-dark.svg"
    },
    "podcast": "logos/fundopshq-interviews.svg",
    "minSizes": {
      "full": "120px",
      "short": "32px"
    },
    "note": "Logo is fully monochrome - FundOpsHQ in single color (white on dark, navy on light)"
  },

  "patterns": {
    "diagonalStripes": {
      "name": "Diagonal Stripes",
      "usage": "Hero sections, podcast covers, dark backgrounds",
      "angle": 45,
      "spacing": "20px",
      "strokeWidth": "1px",
      "strokeColor": "#264466",
      "opacity": 0.3,
      "css": "background-image: repeating-linear-gradient(45deg, transparent, transparent 19px, rgba(38, 68, 102, 0.3) 19px, rgba(38, 68, 102, 0.3) 20px);"
    },
    "fineGrid": {
      "name": "Fine Grid",
      "usage": "Data sections, dashboards, tables",
      "spacing": "24px",
      "strokeWidth": "0.5px",
      "strokeColor": "#264466",
      "opacity": 0.4,
      "css": "background-image: linear-gradient(rgba(38, 68, 102, 0.2) 1px, transparent 1px), linear-gradient(90deg, rgba(38, 68, 102, 0.2) 1px, transparent 1px); background-size: 24px 24px;"
    },
    "dotGrid": {
      "name": "Dot Grid",
      "usage": "Light backgrounds, cards, subtle texture",
      "spacing": "20px",
      "dotSize": "2px",
      "dotColor": "#D4CDC4",
      "opacity": 1,
      "css": "background-image: radial-gradient(#D4CDC4 1px, transparent 1px); background-size: 20px 20px;"
    },
    "horizontalLines": {
      "name": "Horizontal Lines",
      "usage": "Paper texture, warm backgrounds",
      "spacing": "8px",
      "strokeWidth": "1px",
      "strokeColor": "#D4CDC4",
      "css": "background-image: linear-gradient(#D4CDC4 1px, transparent 1px); background-size: 100% 8px;"
    }
  },

  "socialMedia": {
    "youtube": {
      "thumbnail": {
        "width": 1280,
        "height": 720,
        "template": "templates/social/youtube-thumbnail.svg",
        "description": "Video thumbnails"
      },
      "channelBanner": {
        "width": 2560,
        "height": 1440,
        "safeArea": { "width": 1546, "height": 423 },
        "template": "templates/social/youtube-banner.svg",
        "description": "Channel art/banner"
      },
      "profilePhoto": {
        "width": 800,
        "height": 800,
        "template": "templates/social/youtube-profile.svg",
        "description": "Channel profile picture"
      },
      "endScreen": {
        "width": 1920,
        "height": 1080,
        "template": "templates/social/youtube-endscreen.svg",
        "description": "Video end screen template"
      }
    },
    "linkedin": {
      "postImage": {
        "width": 1200,
        "height": 627,
        "template": "templates/social/linkedin-post.svg",
        "description": "Standard post image"
      },
      "banner": {
        "width": 1584,
        "height": 396,
        "template": "templates/social/linkedin-banner.svg",
        "description": "Profile/company banner"
      },
      "articleCover": {
        "width": 1200,
        "height": 644,
        "template": "templates/social/linkedin-article.svg",
        "description": "Article/newsletter cover"
      },
      "profilePhoto": {
        "width": 400,
        "height": 400,
        "template": "templates/social/linkedin-profile.svg",
        "description": "Profile picture"
      }
    },
    "twitter": {
      "postImage": {
        "width": 1200,
        "height": 675,
        "template": "templates/social/twitter-post.svg",
        "description": "Standard post image (16:9)"
      },
      "header": {
        "width": 1500,
        "height": 500,
        "template": "templates/social/twitter-header.svg",
        "description": "Profile header/banner"
      },
      "profilePhoto": {
        "width": 400,
        "height": 400,
        "template": "templates/social/twitter-profile.svg",
        "description": "Profile picture"
      }
    },
    "instagram": {
      "postSquare": {
        "width": 1080,
        "height": 1080,
        "template": "templates/social/instagram-post-square.svg",
        "description": "Square post (1:1)"
      },
      "postPortrait": {
        "width": 1080,
        "height": 1350,
        "template": "templates/social/instagram-post-portrait.svg",
        "description": "Portrait post (4:5)"
      },
      "story": {
        "width": 1080,
        "height": 1920,
        "template": "templates/social/instagram-story.svg",
        "description": "Story/Reel (9:16)"
      },
      "profilePhoto": {
        "width": 320,
        "height": 320,
        "template": "templates/social/instagram-profile.svg",
        "description": "Profile picture"
      }
    },
    "tiktok": {
      "video": {
        "width": 1080,
        "height": 1920,
        "template": "templates/social/tiktok-video.svg",
        "description": "Video cover (9:16)"
      },
      "profilePhoto": {
        "width": 200,
        "height": 200,
        "template": "templates/social/tiktok-profile.svg",
        "description": "Profile picture"
      }
    },
    "podcast": {
      "applePodcasts": {
        "width": 3000,
        "height": 3000,
        "template": "templates/social/podcast-cover.svg",
        "description": "Apple Podcasts cover art"
      },
      "spotify": {
        "width": 3000,
        "height": 3000,
        "template": "templates/social/podcast-cover.svg",
        "description": "Spotify cover art (same as Apple)"
      },
      "episodeCard": {
        "width": 1200,
        "height": 630,
        "template": "templates/social/podcast-episode.svg",
        "description": "Episode share card"
      }
    },
    "og": {
      "default": {
        "width": 1200,
        "height": 630,
        "template": "templates/social/og-default.svg",
        "description": "Default Open Graph image"
      },
      "article": {
        "width": 1200,
        "height": 630,
        "template": "templates/social/og-article.svg",
        "description": "Article share image"
      }
    },
    "favicon": {
      "ico": { "sizes": [16, 32, 48], "file": "exports/favicon/favicon.ico" },
      "png16": { "width": 16, "height": 16, "file": "exports/favicon/favicon-16x16.png" },
      "png32": { "width": 32, "height": 32, "file": "exports/favicon/favicon-32x32.png" },
      "png192": { "width": 192, "height": 192, "file": "exports/favicon/android-chrome-192x192.png" },
      "png512": { "width": 512, "height": 512, "file": "exports/favicon/android-chrome-512x512.png" },
      "appleTouchIcon": { "width": 180, "height": 180, "file": "exports/favicon/apple-touch-icon.png" }
    }
  },

  "brandVoice": {
    "tone": ["professional", "knowledgeable", "trustworthy", "clear", "educational", "institutional"],
    "avoid": ["emojis in formal content", "casual slang", "overly technical jargon without explanation", "flashy colors or effects"],
    "personality": "Expert advisor who explains complex fund operations concepts clearly and builds trust through accuracy, professionalism, and quiet confidence"
  }
}
